{
  "name": "long-story-library",
  "version": "0.0.4",
  "description": "Raw javaScript utility library. Useful tools for javaScript developers.",
  "main": "build/_$.js",
  "eslintConfig": {
    "extends": [
      "eslint:recommended"
    ],
    "env": {
      "browser": true
    },
    "rules": {
      "react/prop-types": "off",
      "no-implied-eval": 1,
      "no-extra-bind": 1,
      "default-case": 1,
      "class-methods-use-this": 1,
      "block-scoped-var": 2,
      "accessor-pairs": 1
    }
  },
  "scripts": {
    "test": "exit 0",
    "build": "webpack --config webpack.config.prod.js",
    "umd": "webpack --config webpack.config.umd.js",
    "prepublish": "npm run build --scripts-prepend-node-path && npm run umd --scripts-prepend-node-path"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/LongStoryMedia/long-story-library"
  },
  "keywords": [
    "javascript",
    "utilities",
    "raw",
    "small"
  ],
  "author": "Scott Long <longstoryscott@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/LongStoryMedia/long-story-library/issues"
  },
  "homepage": "https://github.com/LongStoryMedia/long-story-library#readme",
  "devDependencies": {
    "eslint": "^6.1.0",
    "eslint-loader": "^2.2.1",
    "webpack": "^4.39.1",
    "webpack-cli": "^3.3.6"
  }
}
